<ol class="list-group list-group-numbered container mt-5">
    <h2 class="mb-3"><span class="text-danger">remaining</span> tasks...</h2>

    <% if(tasks.length === 0){ %>
    <h3 class="text-success text-center">no remaining task available.</h3>
    <% }%> <% tasks.forEach(function(task){ %>
    <li
        class="border border-dark mb-3 list-group-item d-flex justify-content-between align-items-start"
    >
        <div class="ms-2 me-auto">
            <div class="fw-bold fs-4"><%= task.title %></div>
            <%= task.desc.substr(0,20) %>... |
            <small class="text-danger"><%= task.deadline %></small>
        </div>
        <a href="/edit/<%= task.id%>">
            <span class="fs-4 badge rounded-pill">✏️</span>
        </a>
        <a href="/delete/<%= task.id%>">
            <span class="fs-4 badge rounded-pill">❌</span>
        </a>
    </li>
    <% })%>
</ol>

<%- include('footer')%>